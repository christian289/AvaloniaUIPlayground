<Window x:Class="IndustryMachineDeviceUI.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:IndustryMachineDeviceUI.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="IndustryMachineDeviceUI"
        d:DesignHeight="450"
        d:DesignWidth="800"
        Background="Black"
        mc:Ignorable="d">
    <Window.Styles>
        <StyleInclude Source="/Controls/IndustrialDashboardControl.axaml" />
        <StyleInclude Source="/Controls/AnimatedBackgroundControl.axaml" />
    </Window.Styles>

    <!--  애니메이션 배경으로 전체 윈도우 감싸기  -->
    <controls:AnimatedBackgroundControl Classes="fullscreen">

        <!--  반응형 그리드 레이아웃  -->
        <Grid x:Name="MainGrid"
              Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  헤더  -->
            <Border Grid.Row="0"
                    Margin="0,0,0,24"
                    Padding="24,16"
                    Background="#30000000"
                    CornerRadius="12">
                <TextBlock HorizontalAlignment="Center"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           LetterSpacing="2"
                           Text="INDUSTRIAL CONTROL SYSTEM" />
            </Border>

            <!--  메인 시계 영역  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  중앙 메인 시계  -->
                <controls:IndustrialDashboardControl Grid.Row="1"
                                                     Grid.Column="1"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Classes="large" />

                <!--  좌측 컴팩트 시계  -->
                <controls:IndustrialDashboardControl Grid.Row="1"
                                                     Grid.Column="0"
                                                     Margin="0,0,32,0"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Top"
                                                     Classes="compact" />

                <!--  우측 컴팩트 시계  -->
                <controls:IndustrialDashboardControl Grid.Row="1"
                                                     Grid.Column="2"
                                                     Margin="32,0,0,0"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Bottom"
                                                     Classes="compact" />
            </Grid>

            <!--  푸터 상태바  -->
            <Border Grid.Row="2"
                    Margin="0,24,0,0"
                    Padding="24,12"
                    Background="#30000000"
                    CornerRadius="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  시스템 상태  -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal">
                        <Ellipse Width="12"
                                 Height="12"
                                 Margin="0,0,8,0"
                                 Fill="#4CAF50" />
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#4CAF50"
                                   Text="SYSTEM ONLINE" />
                    </StackPanel>

                    <!--  센터 정보  -->
                    <TextBlock Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#CCFFFFFF"
                               Text="UTC+09:00 | KST" />

                    <!--  우측 상태  -->
                    <TextBlock Grid.Column="2"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#FFB74D"
                               Text="READY" />
                </Grid>
            </Border>
        </Grid>
    </controls:AnimatedBackgroundControl>
</Window>
